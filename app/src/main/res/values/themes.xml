<resources>
    <!-- Base application theme. -->
    <style name="Theme.TestHammerSystems" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/custom_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

<!--    <style name="Theme.TestHammerSystems.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="Theme.CollapsingExample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/custom_background</item>
        <item name="colorPrimaryDark">@color/custom_background</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.CollapsingExample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/custom_background</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/text_color_chip_state_list</item>
        <item name="android:textColor">@color/background_color_chip_state_list</item>
    </style>
</resources>